<!DOCTYPE html>
<html>
  <head>
    <title>PhotogramSignin2</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>

<% if notice.present?%>
<div>
  <%= notice %>
<div>
<% end %>

<% if alert.present?%>
<div>
  <%= alert %>
<div>
<% end %>
    <ul>
      <li><a href="/user_sign_up">Sign up</a></li>
      <li><a href="/user_sign_in">Sign in</a></li>
      <li><a href="/user_sign_out">Sign out</a></li>
      <li><a href="/">Users</a></li>
      <li><a href="/photos">Photos</a></li>
      <li><a href="/">Users</a></li>

      <li><%= session.fetch(:user_id) %>
    </ul>
    <%= yield %>
  </body>
</html>
